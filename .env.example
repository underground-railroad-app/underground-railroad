# Underground Railroad - Environment Configuration
# Copy this file to .env and fill in your values

# Veilid Configuration
VEILID_BOOTSTRAP_NODES=bootstrap.veilid.net:5150
VEILID_NETWORK_KEY_PASSWORD=your-network-key-password

# Security Settings
AUTO_LOCK_MINUTES=5
MAX_FAILED_ATTEMPTS=3

# Development
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Platform-specific
# iOS: App Group ID for sharing data
IOS_APP_GROUP=group.com.undergroundrailroad.app

# Android: Package name
ANDROID_PACKAGE=com.undergroundrailroad.app

# Note: This file should NEVER be committed to git
# The .gitignore already excludes .env files
